    <mapping class="org.hospital.beans.Medicine_Available"/>
  <mapping class="org.hospital.beans.Medicine_Receptions"/>
  <mapping class="org.hospital.beans.Medicine_Sold"/>
  <mapping class="org.hospital.beans.Notices"/>
  <mapping class="org.hospital.beans.NurseAllotments"/>
  <mapping class="org.hospital.beans.Patient_History"/>
