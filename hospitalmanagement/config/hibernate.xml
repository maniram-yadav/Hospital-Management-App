    <mapping class="org.hospital.beans.Employees"/>
    <mapping class="org.hospital.beans.Blood_Available"/>
    <mapping class="org.hospital.beans.BDonations_History"/>
     <mapping class="org.hospital.beans.Department"/> 
    <mapping class="org.hospital.beans.Doctors"/>
